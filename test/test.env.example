# Test Environment Configuration
# Copy this file to .env.test and update values for your test environment

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=test_user
DB_PASSWORD=test_password
DB_DATABASE=hms_test_db

# JWT Configuration
JWT_SECRET=test_jwt_secret_key_for_e2e_tests
JWT_EXPIRES_IN=24h

# Application Configuration
PORT=3001
NODE_ENV=test

# Test-specific Configuration
TEST_TIMEOUT=30000
TEST_DB_SYNC=true
TEST_DB_DROP_SCHEMA=false

# Logging
LOG_LEVEL=error

# API Configuration
API_PREFIX=api/v1
SWAGGER_ENABLED=false

# File Upload (for testing)
UPLOAD_DEST=./test/uploads
MAX_FILE_SIZE=5242880

# Email (mock for testing)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=test
MAIL_PASS=test
MAIL_FROM=test@hms.com

# Redis (if used)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External APIs (mock endpoints for testing)
PAYMENT_GATEWAY_URL=http://localhost:3002/mock-payment
BOOKING_API_URL=http://localhost:3003/mock-booking